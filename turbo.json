{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["lib/**", ".build/**"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"]
    },
    "validate": {
      "dependsOn": ["build"],
      "outputs": ["types/**", ".validate/**"]
    },
    "bundle": {
      "dependsOn": ["build"],
      "outputs": ["bundle/**"]
    },
    "package": {
      "dependsOn": ["build"],
      "outputs": ["dist/**"]
    },
    "format": {
      "outputs": [".format/**"]
    },
    "docker:build": {
      "dependsOn": ["build", "bundle", "package"],
      "outputs": []
    },
    "docker:up": {
      "cache": false
    }
  }
}
