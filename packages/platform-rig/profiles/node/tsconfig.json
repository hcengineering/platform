{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "incremental": true,
    "isolatedModules": true,
    
  }
}
