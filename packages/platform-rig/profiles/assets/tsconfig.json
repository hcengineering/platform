{  
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2024",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "types": ["node", "jest"],
    "incremental": true,
    "isolatedModules": true,
    
  }
}