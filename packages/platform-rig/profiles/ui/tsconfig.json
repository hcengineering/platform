{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "declarationMap": true,
    "sourceMap": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "incremental": true
  }
}