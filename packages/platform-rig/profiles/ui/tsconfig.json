{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "incremental": true,
    "esModuleInterop": true,
    "declarationMap": true,
    "isolatedModules": true,
    "lib": [
      "esnext",
      "dom"
    ]
  }
}