{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2024",
    "module": "esnext",
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./.build/dist",
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "declarationMap": true,
