    "_phase:test": "jest --passWithNoTests --silent",
    "docker:build": "../../../common/scripts/docker_build.sh haiodo/love-agent",
    "docker:push": "../../../common/scripts/docker_tag.sh haiodo/love-agent",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint --fix src/**/*.ts",
    "format": "prettier --write src/**/*.ts && pnpm lint:fix",
    "_phase:format": "rushx format",
    "test": "jest --passWithNoTests --coverage",
    "dev": "node esbuild.config.cjs && node bundle/agent.js dev",
    "start": "node bundle/agent.js start",
    "connect": "node esbuild.config.cjs && node bundle/agent.js connect"
  },
